#By: Sam Uel

[global]
    alignment = right
    allow_markup = yes
    bounce_freq = 0
    browser = /usr/bin/firefox -new-tab
    dmenu = /usr/bin/dmenu -p dunst:
    follow = none
    font = Arial Unicode Ms 10
    format = "<b>%s</b>\n%b"
    # geometry [{width}]x{height}][+/-{x}+/-{y}]
    geometry = "0-0+33"
    history_length = 20
    horizontal_padding = 30
    idle_threshold = 120
    ignore_newline = no
    indicate_hidden = yes
    line_height = 0
    monitor = 0
    padding = 8
    separator_color = frame
    separator_height = 1
    show_age_threshold = 60
    show_indicators = yes
    shrink = no
    sort = yes
    startup_notification = false
    sticky_history = yes
    transparency = 20
    word_wrap = yes

[frame]
    width = 2
    color = "#AF87D7"

[shortcuts]
    #close = mod4+x
    #close_all = mod4+ctrl+x
    history = mod4+ctrl+x
    context = ctrl+shift+period

[urgency_low]
    background = "#202020"
    foreground = "#AF87D7"
    timeout = 20

[urgency_normal]
    background = "#202020"
    foreground = "#AF87D7"
    timeout = 20

[urgency_critical]
    background = "#202020"
    foreground = "#f95959"
    timeout = 20

[irc]
    appname = "irssi"
    format  = "%s: %b"
    urgency = low
    background = "#202020"
    foreground = "#AF87D7"
